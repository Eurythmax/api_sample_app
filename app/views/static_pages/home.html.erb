<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the API Sample App</h1>

    <h2>
      This is the home page for the
      <a href="https://backend-development.github.io/apis.html">API
      sample application</a>.</h2>

      <p>  Did you run <strong>rails db:seed</strong>?
      Then you can log in with e-mail <strong>example@railstutorial.org</strong>
      and password <strong>foobar</strong>.
    </p>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg " %>
    <%= link_to "Log In", login_path, class: "btn btn-lg btn-primary" %>

  </div>
<% end %>